<?xml version="1.0" encoding="UTF-8"?><configuration>    <include resource="org/springframework/boot/logging/logback/base.xml"/>    <logger name="org.springframework" level="INFO"/>    <property name="application.name" value="user-service"/>    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">        <encoder>            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %5level --- [%thread] %logger{36} : %msg%n</pattern>            <charset>UTF-8</charset>        </encoder>        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">            <level>DEBUG</level>        </filter>    </appender>    <appender name="infoDailyRollingFile" class="ch.qos.logback.core.rolling.RollingFileAppender">        <file>logs/${application.name}-info.log</file>        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">            <!-- daily rollover -->            <fileNamePattern>logs/${application.name}-info-%d{yyyyMMdd}.log</fileNamePattern>            <!-- 保留180天的日志 -->            <maxHistory>180</maxHistory>        </rollingPolicy>        <encoder>            <pattern>【${application.name}】%d{yyyy-MM-dd HH:mm:ss.SSS} %5level --- [%thread] %logger{36} : %msg%n</pattern>            <charset>UTF-8</charset>        </encoder>    </appender>    <root level="INFO">        <appender-ref ref="infoDailyRollingFile" />    </root>    <springProfile name="local,dev,test,uat,clean">        <logger name="com.dzz" level="DEBUG" />        <logger name="com.dzz.policy.service.*.dao" level="DEBUG"/>    </springProfile>    <springProfile name="prod">        <logger name="com.dzz" level="INFO" />    </springProfile></configuration>